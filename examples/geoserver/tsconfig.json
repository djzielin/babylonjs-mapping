{
	"compilerOptions": {
        "module": "es2020",
    	"target": "es2018",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
		"preserveConstEnums":true,
		"sourceMap": true,
		"watch": false,
		"strictPropertyInitialization": false,
		"allowSyntheticDefaultImports":true
	},
	"files": [
		"src/index.ts"
	]
}
